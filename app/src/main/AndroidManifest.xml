<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kore.ntnu.no.safespace">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Check for camera at runtime: hasSystemFeature(PackageManager.FEATURE_CAMERA). -->
    <uses-feature
        android:name="android.hardware.camera2"
        android:required="false" />

    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature android:name="android.hardware.location.gps" />

    <!-- <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" /> -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_ss_logo_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.MainNavigationMenuActivity" />
        <activity
            android:name=".Activities.ReportActivity"
            android:parentActivityName=".Activities.MainNavigationMenuActivity" />
        <activity
            android:name=".Activities.DocumentActivity"
            android:parentActivityName=".Activities.MainNavigationMenuActivity" />
        <activity
            android:name=".Activities.GPSActivity"
            android:parentActivityName=".Activities.MainNavigationMenuActivity" />
        <activity
            android:name=".Activities.LatestReportActivity"
            android:parentActivityName=".Activities.MainNavigationMenuActivity" />
        <activity
            android:name=".Activities.SettingsActivity"
            android:parentActivityName=".Activities.MainNavigationMenuActivity" />
        <activity
            android:name=".Activities.HelpActivity"
            android:parentActivityName=".Activities.MainNavigationMenuActivity" />

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="no.ntnu.kore.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_path" />
        </provider>

        <activity android:name=".Activities.DisplayReportActivity"></activity>
    </application>

</manifest>