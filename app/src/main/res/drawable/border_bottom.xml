<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- Change stroke android:color to decide what color the actual border should be -->
    <item>
        <shape
            android:shape="rectangle">
            <stroke android:width="1dp" android:color="#FF000000" />
            <solid android:color="#FAFAFA" />
        </shape>
    </item>

    <!-- Change stroke android:color to change "border" color of the container  -->
    <!-- Change solid android:color to change background color of the container  -->
    <!-- Change item (x)dp to decide where you want a line -->
    <item android:top="0dp" android:bottom="1dp" android:right="0dp" android:left="0dp">
        <shape
            android:shape="rectangle">
            <stroke android:width="1dp" android:color="#FAFAFA" />
            <solid android:color="#00000000" />
        </shape>
    </item>

</layer-list>